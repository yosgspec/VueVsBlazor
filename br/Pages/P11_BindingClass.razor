@page "/BindingClass"

<div>
	<h1>Check: @isChecked</h1>
	<input id=chk type=checkbox @bind="isChecked">@(""
	)<label for=chk>CheckBox</label>
	<div class=@(isChecked? "clsA": "clsB")>
		Change Style!
	</div>
</div>

<style>
.clsA{
	color: blue;
	font-size: 1.5em;
	text-decoration: underline solid;
}

.clsB{
	color: red;
	font-size: 1.0em;
	font-style: italic;
}
</style>

@code{
	bool isChecked=false;
}
